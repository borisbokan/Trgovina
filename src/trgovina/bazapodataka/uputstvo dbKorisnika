        Jednu po jednu kopirati i testirati u main.class. Duza i Kraca

        //Brisanje podatka dva reda koda (kraca varijanta)-----------------------
        dbKorisnik dbKorisnik=new dbKorisnik();
        dbKorisnik.ObrisiKorisnika(12);


        //Brisanje podatka dva reda koda (duza varijanta) -------------------
        Korisnik korisnikDuza=new Korisnik();
        korisnikDuza.setId(12);

        dbKorisnik dbKorisnikDuza=new dbKorisnik();
        dbKorisnik.ObrisiKorisnika(korisnikDuza.getId());



