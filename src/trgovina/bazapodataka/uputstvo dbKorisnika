 *pre toga neophondo napraviti bazu sa prilozenom skriptom .


----------------------------------- SELECT ------------------------------------
   MojaKonekcijaJDBC mojaKonn = new MojaKonekcijaJDBC("trgovina", "jdbc:mysql://localhost/trgovina", "root", "");

         Statement sqlizraz = null;
         ResultSet rez = null;
         ArrayList<Korisnik> korisnici = null;

         int brojKorisnika = 0;

         try {
             sqlizraz = mojaKonn.getKonekcija().createStatement();
             rez = sqlizraz.executeQuery(sqlupit.SQLUPIT_PodaciKorisnika);
             korisnici = new ArrayList<>();

             Korisnik korisnik = null;


             while (rez.next()) {

                 korisnik = new Korisnik();
                 korisnik.setId(rez.getInt(sqlupit.tKorisnik_tKorisnik_id));
                 korisnik.setKorisnickoIme(rez.getString(sqlupit.tKorisnik_korisnickoIme));
                 korisnik.setIme(rez.getString(sqlupit.tKorisnik_ime));
                 korisnik.setMailAdresa(rez.getString(sqlupit.tKorisnik_emailadresa));
                 korisnik.setSlikaKorisnika(rez.getString(sqlupit.tKorisnik_slikaKorisnika));
                 korisnik.setSifra(rez.getString(sqlupit.tKorisnik_sifra));
                 korisnik.setPrezime(rez.getString(sqlupit.tKorisnik_prezime));
                 korisnik.setToken(rez.getString(sqlupit.tKorisnik_token));
                 korisnik.setDatumRodjenja(rez.getDate(sqlupit.tKorisnik_datumrodjenja));

                 korisnici.add(korisnik);
                 brojKorisnika++;

             }


         } catch (SQLException e) {
             mojaKonn.setPoruka(e.getMessage());
             e.printStackTrace();
         }

         //Zatvaram konekciju sa bazom
         mojaKonn.ZatvoriKonekciju();

         System.out.println("Ukupno korisnika > " + brojKorisnika);
         if (mojaKonn.getPoruka() == null) {
             System.out.println("Bez greske...!");
         } else {
             System.out.println("");
         }


         System.out.println("Objekti , prikaz podataka iz objekta");

         for (Korisnik stavka : korisnici) {

             System.out.println("Korisnik > " + stavka.getId() + " - " + stavka.getPrezime() + ", " + stavka.getIme());


         }

--------------------------------------- INSERT --------------------------------------------
*Kopirati kod u Trgovina.java -> main metod i testirati


  //Iniciranje konstruktora i otvaranje baze
        MojaKonekcijaJDBC mojaKonn = new MojaKonekcijaJDBC("trgovina", "jdbc:mysql://localhost/trgovina", "root", "");

        //Unos novog korisnika
        Korisnik noviKorisnik = new Korisnik();
        noviKorisnik.setPrezime("Stamenkovic");
        noviKorisnik.setIme("Jelena");
        Timestamp datum = new Timestamp(85, 7, 22, 11, 25, 0, 0);
        noviKorisnik.setDatumRodjenjaString(datum.toString());
        noviKorisnik.setKorisnickoIme("stajelena");
        noviKorisnik.setSifra("jecabeca");
        noviKorisnik.setMailAdresa("stajela@mail.com");
        noviKorisnik.setSlikaKorisnika("/nema slike/malo sutra/");
        noviKorisnik.setToken("2543436463204KKKK_828jjkdkjwkjkjw:grdgheKJDKeInnn;;MD542338MMNSNuuJJhsjppw9kkkKKKsbbBBmL");


        try {
            //Sql izraz
            Statement izraz = mojaKonn.getKonekcija().createStatement();
            //Slanje novog korisnika ka SQL upitu
            sqlKorisnik sqlkor = new sqlKorisnik(noviKorisnik);
            //Realizacija sql upita i vracanej bulove o uspesnosti (True ako je sve ok)
            boolean uspeh = izraz.execute(sqlkor.SQLINSERT_PodaciKorisnika());
            //Zatvaranje konekcije koja je otvorena u konstruktoru
            mojaKonn.ZatvoriKonekciju();
            if (!uspeh) {
                System.out.println("");
                System.out.println("Uspesno snimljeno!");
            } else {
                System.out.println("");
                System.out.println("Snimanje podatka neuspesno!");
            }


        } catch (SQLException e) {
            //Setujem poruku ukoliko ima greske!
            mojaKonn.setPoruka(e.getMessage());
            e.printStackTrace();
        }




